/* news page */
.news-large > h3{
    text-align: center;
}

.news-large > img{
    display: block;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
}

.read-more {
    text-transform: uppercase;
    color: #666666;
    float: right;
}

.overlay > h1, .overlay > h2{
    color: #fff;
}
        
/* ticket page*/
@media (max-width: 768px) { 
    #basic-ticket, #premium-ticket {
        width: 100%;
    }
}

@media (min-width: 767px) { 
    #basic-ticket, #premium-ticket {
        width: 50%;
    }
}       

#pay-btn{
    margin-top: 50px;
    transition: color .2s ease-in-out background .2s ease-in-out; 
    color: #fff;
    background: linear-gradient(90deg, #84CEEB, #5AB9EA);
    padding: 10px;
    border: none;
    border-radius: 10px;
    font-size: 30px;
    text-decoration: none;
    text-align: center; 
}

#pay-btn:hover{
    color: #e6ac00;
    background: linear-gradient(90deg, #53caf9, #1fb1f9);
}         
   
#pay-btn > a{
    font-weight: bold;
    text-decoration: none;
    text-transform: uppercase;
    color: #fff;
}

#pay-btn > a:hover{
    color: #e6ac00;
}      

#basic-ticket, #premium-ticket {
    text-align: center;
    display: inline-block;
}

#basic-ticket>ul, #premium-ticket>ul {
    text-align: center;
    list-style-position: inside;
    margin-left: -50px; 
}

#premium-ticket-header{
    color: #e6ac00;
}

#basic-ticket-header{
    color: #999999;
}

#basic-ticket > img, #premium-ticket > img {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}        

