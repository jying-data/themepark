/* shared */
body {
  margin: 0;
  font-family: 'Trebuchet MS', sans-serif;
  background-color: #f4f4f4;
}

h1, h2, h3 {
    color: #36587c;
    text-align: center;
}   

hr {
    margin: 10px 0px;
    border-top: 2px ridge;
    color: #cad8e8;
}
    
.content {
    margin: 0 auto;
    padding: 0px 20px;
    max-width: 1200px;
}

.row {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
}

footer {
   width: 100%;
   background: linear-gradient(95deg, #304d6d 3%, #82a0bc 20%, #a7cced 50%, #63adf2 70%, #545e75 96%);
   margin-top: 5em;
}

.footer-col, .footer-col > p > a {
    color: #1a1a1a;
}

.footer-col{
    text-align: center;
    display:inline-block;
}  

.banner-btn, .ticket-btn{
    transition: color .2s ease-in-out background .2s ease-in-out; 
    color: #fff;
    background: linear-gradient(90deg, #84CEEB, #5AB9EA);
    padding: 10px;
    border: none;
    border-radius: 10px;
    font-size: 30px;
    text-decoration: none;
}

.banner-btn:hover, .ticket-btn:hover{
    color: #cccccc;
    background: linear-gradient(90deg, #6bd2fa, #38b9fa);
}         
   
.ticket-btn, #pay-btn{
    text-align: center;   
}   
.ticket-btn > a{
    font-weight: bold;
    text-decoration: none;
    text-transform: uppercase;
    color: #fff;
}

#logoimg {
    height: 50px;
    width: auto;
    margin: 2px 8px 0 0;
}

#blocker {
    height: 100px;
}

.trio > img, .trio-center > img {
    display: block;
    width: 100%;
    margin: 0 0 2em 0;
}
       


        
/* positions, size and background color of navbar  */
.header {
  background: linear-gradient(95deg, #304d6d 3%, #82a0bc 20%, #a7cced 50%, #63adf2 70%, #545e75 96%);
  box-shadow: 1px 1px 4px 0 rgba(0,0,0,.1);
  position: fixed;
  width: 100%;
  height: 55px;
  z-index: 3;
}

/* aesthetics of the boxes for each navbar menu item */
.header ul {
  margin: 0;
  padding: 0;
  list-style: none;
  overflow: hidden;
}

/* aesthetics of navbar menu links */
.header li a {
  display: block;
  padding: 20px 20px;
  border-right: 1px solid #cce6ff;
  text-decoration: none;
  font-family: 'Trebuchet MS', sans-serif;
  font-weight: bold;
  font-size: 14px;
  color: #fff;
}

.header li a:hover,
.header .menu-btn:hover {
  background-color: #cce6ff;
  text-decoration: underline;
}

/* hide the small screen menu by default */
.header .menu {
  clear: both;
  max-height: 0;
  transition: max-height .2s ease-out;
}

/* aesthetics of hambuerger icon */
.header .menu-icon {
  cursor: pointer;
  display: inline-block;
  float: right;
  padding: 28px 20px;
  position: relative;
}

.header .menu-icon .navicon {
  background: #eaf3fb;
  display: block;
  height: 2px;
  position: relative;
  transition: background .2s ease-out;
  width: 18px;
}

.header .menu-icon .navicon:before,
.header .menu-icon .navicon:after {
  background: #eaf3fb;
  content: '';
  display: block;
  height: 100%;
  position: absolute;
  transition: all .2s ease-out;
  width: 100%;
}

.header .menu-icon .navicon:before {
  top: 5px;
}

.header .menu-icon .navicon:after {
  top: -5px;
}

/* menu btn */

.header .menu-btn {
  display: none;
}

.header .menu-btn:checked ~ .menu {
  max-height: 240px;
}

.header .menu-btn:checked ~ .menu-icon .navicon {
  background: transparent;
}

.header .menu-btn:checked ~ .menu-icon .navicon:before {
  transform: rotate(-45deg);
}

.header .menu-btn:checked ~ .menu-icon .navicon:after {
  transform: rotate(45deg);
}

.header .menu-btn:checked ~ .menu-icon:not(.steps) .navicon:before,
.header .menu-btn:checked ~ .menu-icon:not(.steps) .navicon:after {
  top: 0;
}

@media (min-width: 768px) {
    .trio {
        width: 32%;
        margin-bottom: 2%
    }
    
    .trio-center {
        width: 32%;
        margin: 0 2% 2% 2%;
    }   
    
    .footer-col {
        width: 48%;
    }
    
    .header li {
        float: left;
    }
    .header li a {
        padding: 20px 30px;
    }
    .header .menu {
        clear: none;
        float: right;
        max-height: none;
    }
    .header .menu-icon {
        display: none;
    }
    
    .header ul {
        background-color: transparent;
    }
}

@media (max-width: 767px) {
    .header ul {
        background: linear-gradient(95deg, #304d6d 3%, #82a0bc 20%, #a7cced 50%, #63adf2 70%, #545e75 96%);
    }
    
    .trio, .trio-center {
        width: 100%;
    }
    
    .footer-col {
        width: 100%;
    }
}   